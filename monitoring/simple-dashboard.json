{
    "dashboard": {
        "title": "API Metrics - Simple",
        "timezone": "browser",
        "refresh": "5s",
        "time": {
            "from": "now-15m",
            "to": "now"
        },
        "panels": [
            {
                "id": 1,
                "type": "stat",
                "title": "Total Predictions",
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "api_predictions_total",
                        "refId": "A"
                    }
                ],
                "options": {
                    "colorMode": "value",
                    "graphMode": "area"
                },
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": null,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 2,
                "type": "stat",
                "title": "Total Inferences",
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 6,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "model_inference_seconds_count",
                        "refId": "A"
                    }
                ],
                "options": {
                    "colorMode": "value",
                    "graphMode": "area"
                },
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": null,
                                    "color": "blue"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 3,
                "type": "timeseries",
                "title": "Request Rate",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "rate(http_requests_total[1m])",
                        "refId": "A",
                        "legendFormat": "{{handler}}"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "custom": {
                            "drawStyle": "line",
                            "fillOpacity": 10
                        },
                        "unit": "reqps"
                    }
                }
            },
            {
                "id": 4,
                "type": "stat",
                "title": "Avg Inference Time (seconds)",
                "gridPos": {
                    "h": 8,
                    "w": 6,
                    "x": 12,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(model_inference_seconds_sum[5m]) / rate(model_inference_seconds_count[5m])",
                        "refId": "A"
                    }
                ],
                "options": {
                    "colorMode": "value"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": null,
                                    "color": "green"
                                },
                                {
                                    "value": 1,
                                    "color": "yellow"
                                },
                                {
                                    "value": 2,
                                    "color": "red"
                                }
                            ]
                        }
                    }
                }
            }
        ]
    },
    "overwrite": true
}